{
  "name": "quicklinks",
  "version": "1.0.0",
  "description": "quicklinks - header navigation plugin",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^13.0.0",
    "clean-css": "^3.4.12",
    "jshint": "^2.9.1",
    "mocha": "^2.4.5",
    "uglify-js": "^2.6.2"
  },
  "scripts": {
    "info": "echo 'quicklinks - header navigation plugin'",
    "lint": "echo 'linting' && jshint assets/scripts/main.js",
    "test": "echo 'testing' && mocha test/",
    "bundle:js": "echo 'bundling' && browserify assets/scripts/main.js -o assets/scripts/bundle.js",
    "minify:js": "echo 'minify:js' && uglifyjs assets/scripts/bundle.js -o dist/public/js/main.min.js",
    "minify:css": "echo 'minify:css' && cleancss assets/css/main.css -o dist/public/css/main.min.css && cleancss assets/css/demo_styles.css -o dist/public/css/demo_styles.min.css",
    "pretest": "npm run lint -s",
    "posttest": "npm run bundle:js && npm run minify:js && npm run minify:css"
  },
  "author": "Hayden Wagner",
  "license": "ISC"
}
